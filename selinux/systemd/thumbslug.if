##	</summary>
## </param>
#
interface(`thumbslug_search_rw_dir',`
	gen_require(`
		type thumbslug_rw_t;
	')

	allow $1 thumbslug_rw_t:dir search_dir_perms;
	files_search_rw($1)
')

