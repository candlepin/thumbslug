########################################
## <summary>
##	Read thumbslug PID files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`thumbslug_read_pid_files',`
	gen_require(`
		type thumbslug_var_run_t;
	')

	files_search_pids($1)
	allow $1 thumbslug_var_run_t:file read_file_perms;
')


########################################
## <summary>
##	All of the rules required to administrate
##	an thumbslug environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`thumbslug_admin',`
	gen_require(`
		type thumbslug_t;
	type thumbslug_unit_file_t;
	type thumbslug_log_t;
	type thumbslug_rw_t;
	type thumbslug_var_run_t;
	')

	allow $1 thumbslug_t:process { signal_perms };
	ps_process_pattern($1, thumbslug_t)
    tunable_policy(`deny_ptrace',`
        allow $1 thumbslug_t:process ptrace;
    ')

    thumbslug_systemctl($1)
    admin_pattern($1, thumbslug_unit_file_t)
    allow $1 thumbslug_unit_file_t:service all_service_perms;
    optional_policy(`
            systemd_passwd_agent_exec($1)
            systemd_read_fifo_file_passwd_run($1)
    ')

	logging_search_logs($1)
	admin_pattern($1, thumbslug_log_t)

	files_search_etc($1)
	admin_pattern($1, thumbslug_rw_t)

	files_search_pids($1)
	admin_pattern($1, thumbslug_var_run_t)

')

